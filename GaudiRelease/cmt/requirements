# Package used to manage the Gaudi project packages
# No wildcards allowed

package GaudiRelease

version v27r0
branches doc cmt

# CMT and Gaudi policy
use GaudiPolicy	   v15r7

# Gaudi executable
use Gaudi          v27r0

# Gaudi Plugin Service
use GaudiPluginService    v3r1

# Gaudi libraries - generic
use GaudiKernel    v33r0
use GaudiCoreSvc   v4r0
use GaudiCommonSvc v4r0
use GaudiSvc       v22r0
use GaudiAud       v10r4
use GaudiAlg       v17r0
use GaudiGSL       v9r1
use GaudiUtils     v6r1
use GaudiPartProp  v2r2

# Technology-specific Persistency packages
use RootCnv        v2r1
use RootHistCnv    v12r3
use GaudiPython    v14r1

# Container package specifying the minimum set of core packages
use GaudiSys       v27r0

# Monitoring utilities.
use GaudiMonitor   v5r6

# Profiling components and tools
use GaudiProfiling v2r8

# Multi Processing libraries
use GaudiMP v3r4

# Hive
use GaudiHive v1r1

# Examples packages
use GaudiExamples   v27r0


# Atlas packages
use PartPropSvc      v7r0

### Mark the package as the container package of the project.
apply_pattern container_package

# Allow the generation of QMTest summary
apply_pattern QMTestSummarize
