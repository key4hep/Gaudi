# Package used to manage the Gaudi project packages
# No wildcards allowed

package GaudiRelease

version v25r0
branches doc cmt

# CMT and Gaudi policy
use GaudiPolicy	   v14r0

# Gaudi executable
use Gaudi          v25r0

# Gaudi Plugin Service
use GaudiPluginService    v1r0

# Gaudi libraries - generic
use GaudiKernel    v30r0
use GaudiCoreSvc   v3r0
use GaudiCommonSvc v3r0
use GaudiSvc       v21r0
use GaudiAud       v10r0
use GaudiAlg       v15r0
use GaudiGSL       v8r0
use GaudiUtils     v5r0
use GaudiPartProp  v2r0

# Technology-specific Persistency packages
use RootCnv        v1r22
use RootHistCnv    v12r0
use GaudiPython    v13r0

# Container package specifying the minimum set of core packages
use GaudiSys       v25r0

# Monitoring utilities.
use GaudiMonitor   v5r0

# Profiling components and tools
use GaudiProfiling v2r0

# Multi Processing libraries
use GaudiMP v3r0

# Hive
use GaudiHive v2

# Examples packages
use GaudiExamples   v25r0


# Atlas packages
use PartPropSvc      v5r0

### Mark the package as the container package of the project.
apply_pattern container_package

# Allow the generation of QMTest summary
apply_pattern QMTestSummarize
